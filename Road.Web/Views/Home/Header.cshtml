//var telegram = Model.FirstOrDefault(s => s.Id == (int)StaticContents.Telegram);
}
<div id="top-bar">
    <div id="top-bar-inner" class="container">
        <div class="top-bar-inner-wrap">
            <div class="top-bar-content">
                <div class="inner">
                    @if (Model.Address != null)
                    {
                        <span class="address content">@Model.Address</span>
                    }
                    @if (Model.Phonenumber != null)
                    {
                        <span class="phone content">@Model.Phonenumber</span>
                    }
                </div>
            </div><!-- /.top-bar-content -->

            <div class="top-bar-socials">
                <div class="inner">
                    <span class="text">دنبال کردن ما:</span>
                    <span class="icons">
                        @if (Model.Facebook != null)
                        {
                            <a href="https://@Model.Facebook"><i class="fa fa-facebook"></i></a>
                        }
                        @if (Model.Instagram != null)
                        {
                            <a href="https://@Model.Instagram"><i class="fa fa-instagram"></i></a>
                        }
                        @if (Model.Whatsapp != null)
                        {
                            <a href="https://@Model.Whatsapp"><i class="fab fa-whatsapp"></i></a>
                        }
                    </span>
                </div>
            </div><!-- /.top-bar-socials -->
        </div>
    </div>
</div>
