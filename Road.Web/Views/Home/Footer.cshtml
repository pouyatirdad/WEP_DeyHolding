<!-- Footer -->
<footer id="footer" class="clearfix">
    <div id="footer-widgets" class="container">
        <div class="themesflat-row gutter-30 d-md-flex justify-content-center">
            <div class="col span_1_of_3">
                <div class="widget widget_text">
                    <div class="textwidget">
                        <p>
                            <img src="~/Files/Logo/@Model.ImageLogo" alt="Image" width="200">
                        </p>

                        <p class="margin-bottom-15">@Model.CompanyVision</p>

                        <ul>
                            <li>
                                <div class="inner">
                                    <span class="fa fa-map-marker"></span>
                                    <span class="text">@Model.Address</span>
                                </div>
                            </li>

                            <li>
                                <div class="inner">
                                    <span class="fa fa-phone"></span>
                                    <span class="text">تلفن ما : @Model.Phonenumber</span>
                                </div>
                            </li>

                            <li class="margin-top-7">
                                <div class="inner">
                                    <span class=" font-size-14 fa fa-envelope"></span>
                                    <span class="text">@Model.Email</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div><!-- /.widget_text -->
                <div class="themesflat-spacer clearfix" data-desktop="0" data-mobile="0" data-smobile="35"></div>
            </div><!-- /.col -->

            <div class="col span_1_of_3">
                <div class="themesflat-spacer clearfix" data-desktop="0" data-mobile="0" data-smobile="0"></div>

                <div class="widget widget_lastest">
                    <h2 class="widget-title"><span>پست های اخیر</span></h2>
                    @Html.Action("LatestPosts", "Blog", new { take = 2 })
                </div><!-- /.widget_lastest -->
            </div><!-- /.col -->

            <div class="col span_1_of_3">
                <div class="themesflat-spacer clearfix" data-desktop="0" data-mobile="0" data-smobile="0"></div>

                <div class="widget widget_lastest">
                    <h2 class="widget-title"><span>دسترسی سریع</span></h2>
                    <li class="clearfix">
                        <div class="text">
                            <h3>
                                <a href="/home/">
                                    خانه
                                </a>
                            </h3>
                        </div>
                    </li>
                    <li class="clearfix">
                        <div class="text">
                            <h3>
                                <a href="/blog/">
                                    اخبار
                                </a>
                            </h3>
                        </div>
                    </li>
                    <li class="clearfix">
                        <div class="text">
                            <h3>
                                <a href="/gallery/">
                                    گالری
                                </a>
                            </h3>
                        </div>
                    </li>
                    @*<li class="clearfix">
                        <div class="text">
                            <h3>
                                <a href="/Projects/">
                                    محصولات
                                </a>
                            </h3>
                        </div>
                    </li>*@
                    <li class="clearfix">
                        <div class="text">
                            <h3>
                                <a href="/ContactUs/">
                                    تماس با ما
                                </a>
                            </h3>
                        </div>
                    </li>
                    <li class="clearfix">
                        <div class="text">
                            <h3>
                                <a href="/AboutUs/">
                                    درباره ما
                                </a>
                            </h3>
                        </div>
                    </li>
                </div><!-- /.widget_lastest -->
            </div><!-- /.col -->


        </div><!-- /.themesflat-row -->
    </div><!-- /#footer-widgets -->
</footer><!-- /#footer -->
<!-- Bottom -->
<div id="bottom" class="clearfix has-spacer">
    <div id="bottom-bar-inner" class="container">
        <div class="bottom-bar-inner-wrap">
            <div class="bottom-bar-content">
                <div id="copyright" class="text-center">
